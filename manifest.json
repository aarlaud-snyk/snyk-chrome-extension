{
  "manifest_version": 2,

  "name": "Snyk Chrome Extension",
  "description": "This extension allows the user to check the vulnerabilities for npm packages while visiting the package page on npmjs.",
  "version": "1.0",

  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },

  "browser_action": {
    "default_icon": "snyk-avatar.png",
    "default_popup": "popup.html",
    "default_title": "Stay Secure !"
  },
  "permissions": [
    "activeTab",
    "notifications",
    "tabs",
    "https://snyk.io/*"
  ],
  "web_accessible_resources": [
    "snyk-avatar.png",
    "snyk-avatar-notification.png"
  ],
  "content_scripts": [
  {
    "matches": [
      "https://www.npmjs.com/package/*"
    ],
    "js": ["content_npm.js"]
  },
  {
    "matches": [
      "https://github.com/*"
    ],
    "js": ["content_github.js"]
  }
]
}
