{
  "manifest_version": 2,

  "name": "Snyk Chrome Extension",
  "description": "This extension allows the user to check the vulnerabilities for npm packages while visiting the package page on npmjs.",
  "version": "0.0.0.2",

  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },

  "browser_action": {
    "default_icon": "snyk-avatar.png",
    "default_popup": "popup.html",
    "default_title": "Snyk.io"
  },
  "icons": {
    "16": "snyk-icon-16.png",
    "48": "snyk-icon-48.png",
    "128": "snyk-icon-128.png"
  },
  "permissions": [
    "activeTab",
    "notifications",
    "tabs",
    "https://*/"
  ],
  "web_accessible_resources": [
    "snyk-avatar.png",
    "snyk-avatar-notification.png"
  ],
  "content_scripts": [
  {
    "matches": [
      "https://www.npmjs.com/package/*"
    ],
    "css": ["style.css"],
    "js": ["content_npm.js", "badge.js"]
  },
  {
    "matches": [
      "https://github.com/*"
    ],
    "js": ["content_github.js", "badge.js"]
  }
]
}
